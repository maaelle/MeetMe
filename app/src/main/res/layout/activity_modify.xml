<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFDEE3"
    android:backgroundTint="#CFDEE3"
    tools:context=".ModifyActivity">

    <TextView
        android:id="@+id/titlemod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/chewy"
        android:text="Modify your account"
        android:textColor="#00BCD4"
        android:textColorHighlight="#009688"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectSport" />

    <EditText
        android:id="@+id/SelectNom"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/SelectAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlemod" />

    <EditText
        android:id="@+id/SelectAge"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:hint="Age"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/SelectNom"
        app:layout_constraintTop_toBottomOf="@id/titlemod" />

    <EditText
        android:id="@+id/job"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Profession"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SelectNom" />

    <EditText
        android:id="@+id/ville"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Localisation"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/job" />

    <EditText
        android:id="@+id/SelectBook"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Book"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ville" />

    <EditText
        android:id="@+id/BookAuthor"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Book's Author"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SelectBook" />

    <EditText
        android:id="@+id/SelectMusic"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Music"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BookAuthor" />

    <EditText
        android:id="@+id/MusicAuthor"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Music's Author"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SelectMusic" />

    <EditText
        android:id="@+id/SelectFood"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Favorite food"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MusicAuthor" />

    <EditText
        android:id="@+id/SelectSport"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:hint="Sport"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SelectFood" />


</androidx.constraintlayout.widget.ConstraintLayout>
