<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity">

    <TextView
        android:id="@+id/titlemod2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/chewy"
        android:text="Modify your account"
        android:textColor="#00BCD4"
        android:textColorHighlight="#009688"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EnterDescription"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:hint="Description"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlemod2" />

    <EditText
        android:id="@+id/EnterCitation"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:hint="Citation"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EnterDescription" />

    <EditText
        android:id="@+id/EnterHobbies"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:hint="Hobbies"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EnterCitation" />


    <Button
        android:id="@+id/validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EnterHobbies"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="609dp" />

</androidx.constraintlayout.widget.ConstraintLayout>